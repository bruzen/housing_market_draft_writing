        {
        % \usebeamerfont{title}
        \LARGE
        \usebeamercolor[fg]{title}
        \inserttitle\\[.7cm]
        }
        {
        % \usebeamerfont{subtitle}
        \large
        \usebeamercolor[fg]{subtitle}
        \insertauthor\\[0.5cm]
        }
        {
        % \usebeamerfont{subtitle}
        \small
        \usebeamercolor[fg]{subtitle}
        \insertinstitute\\[0.1cm]
        }

        {
        \small
        % \usebeamerfont{date}
        \usebeamercolor[fg]{date}
        \insertdate\\[1.7cm]
        }

        % \hspace*{-1cm}
        \begin{picture}(0,0)
        \put(-50,0){
            \pgfuseimage{uwlogo}
        }
        \end{picture}
    \end{center}

    \newcommand{\maketitleoxstats}{
        \setbeamertemplate{footline}{} %removefootline for this slide
        \setbeamertemplate{headline}{}
        % \setbeamercolor{background canvas}{bg=darkblue}
        \maketitle
        \setbeamercolor{background canvas}{bg=}
    }
}

